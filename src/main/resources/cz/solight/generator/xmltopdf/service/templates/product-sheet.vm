<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8"/>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
<title>$pdfFilename</title>

#parse( "font-styles.vm" )

<style>
@CHARSET "UTF-8";

#if($isFullLength)
/* Full-length: prevent all page breaks */
@page {
    margin: 0;
}
html, body {
    height: auto !important;
}
* {
    page-break-inside: avoid !important;
    page-break-before: avoid !important;
    page-break-after: avoid !important;
    break-inside: avoid !important;
    break-before: avoid !important;
    break-after: avoid !important;
}
#else
@page {
    size: A4;
    margin: 0;
}

.page-container {
    display: flex;
    flex-direction: column;
    height: calc(297mm - 200px);
}
#end

* {
    box-sizing: border-box;
}

body {
    font-family: 'Exo 2', sans-serif;
    font-stretch: condensed;
    margin: 0;
    padding: 0;
    color: #333;
}

.page-container {
    width: 100%;
    margin-top: 120px;
}

/* Product Info Section */
.product-section {
    display: flex;
    width: 100%;
    padding: 0 35px 0 75px;
    margin-bottom: 20px;
}

.product-info {
    width: 220px;
    padding-right: 20px;
}

.product-code-badge {
    display: inline-block;
    background-color: #F37A22;
    color: white;
    font-size: 12pt;
    font-weight: bold;
    padding: 2px 60px 3px 60px;
    border-radius: 20px;
    margin-top: 30px;
    margin-bottom: 15px;
    vertical-align: middle;
    line-height: 14px;
}

.product-name {
    font-size: 18.7pt;
    font-weight: bold;
    text-transform: uppercase;
    color: #333;
    margin-bottom: 20px;
    line-height: 1.2;
}

.product-details-table {
    width: 100%;
    border-collapse: collapse;
}

.product-details-table td {
    font-size: 12pt;
    font-weight: 300;
    font-style: normal;
    font-stretch: condensed;
    vertical-align: top;
    padding-bottom: 5px;
}

.detail-label {
    color: #666;
    width: 180px;
}

.detail-value {
    font-weight: bold;
    color: #333;
}

/* Product Images */
.product-images {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.main-image-wrapper {
    width: 100%;
    text-align: center;
    margin-bottom: 10px;
}

.main-image {
    max-width: 100%;
    max-height: 200px;
    height: auto;
    border-radius: 4px;
}

.secondary-images {
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
}

.secondary-image {
    max-width: 127px;
    max-height: 127px;
    height: auto;
    border-radius: 4px;
}

/* Description Section */
.description-section {
    background-color: #EDEFF0;
    border-radius: 12px 12px 0 0;
    margin: 35px 35px 0 35px;
    padding: 25px 35px;
#if(!$isFullLength)
    flex: 1;
    overflow: hidden;
#end
}

.description-section-bottom {
    background-color: #EDEFF0;
    border-radius: 0 0 12px 12px;
    margin: 0 35px 0 35px;
    padding: 0 0 25px 0;
}

.description-title {
    font-size: 14.87pt;
    font-weight: 700;
    font-style: normal;
    font-stretch: condensed;
    color: #333;
    margin-bottom: 15px;
}

.description-content {
    font-size: 10pt;
    line-height: 1.1;
}
.description-content p {
    font-size: 10pt;
    font-weight: 300;
    font-style: normal;
    font-stretch: condensed;    
}
.description-content b {
    font-weight: 700;
    font-style: normal;
    font-stretch: condensed;    
}

.description-content ul {
    padding-left: 20px;
    margin: 10px 0;
}

.description-content li {
    margin-bottom: 5px;
}

.description-content h2, .description-content h3 {
    font-size: 16px;
    margin: 15px 0 10px 0;
}

.description-content p {
    margin: 10px 0;
}

.description-content img {
    max-width: 100%;
    height: auto;
}

/* Full Description Button (Short Version Only) */
.full-description-wrapper {
    margin-top: auto;
    padding: 20px 0;
    text-align: center;
    flex-shrink: 0;
}

.full-description-btn {
    display: inline-block;
    background-color: #F37A22;
    color: white;
    font-size: 14px;
    font-weight: bold;
    padding: 2px 30px 3px 30px;
    border-radius: 20px;
    text-decoration: none;
    text-transform: uppercase;
}
</style>

</head>
<body>

<div class="page-container">
    <!-- Product Info Section -->
    <div class="product-section">
        <div class="product-info">
            <div class="product-code-badge">$product.code</div>
            <div class="product-name">$!product.name</div>

            <table class="product-details-table">
                <tr>
                    <td class="detail-label">EAN: $!product.ean</td>
                </tr>
                <tr>
                    <td class="detail-label">POČET KUSŮ V BALENÍ: $product.packageCount</td>
                </tr>
#if($product.guaranteeLength > 0)
                <tr>
                    <td class="detail-label">ZÁRUKA: $product.guaranteeLengthFormatted</td>
                </tr>
#end
            </table>
        </div>

        <div class="product-images">
#if($product.picture1Url != "")
            <div class="main-image-wrapper">
                <img class="main-image" src="$product.picture1Url" alt="$!product.name"/>
            </div>
#end
            <div class="secondary-images">
#if($product.picture2Url != "")
                <img class="secondary-image" src="$product.picture2Url" alt="$!product.name"/>
#end
#if($product.picture3Url != "")
                <img class="secondary-image" src="$product.picture3Url" alt="$!product.name"/>
#end
            </div>
        </div>
    </div>

    <!-- Description Section -->
    <div class="description-section">
        <div class="description-title">$!product.brandName</div>
        <div class="description-content">
            $!product.description
        </div>
    </div>
    <div class="description-section-bottom">
    </div>

    <!-- Full Description Button (Short Version Only) -->
    <div class="full-description-wrapper">
        <a class="full-description-btn" href="https://b2b.solight.cz/detailsklk.aspx?sklk_id=$!product.productId">
            KOMPLETNÍ POPIS
        </a>
    </div>
</div>

</body>
</html>
