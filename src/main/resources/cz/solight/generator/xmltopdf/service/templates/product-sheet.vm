<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8"/>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>


#parse( "font-styles.vm" )

<style>
@CHARSET "UTF-8";

#if($isFullLength)
/* Full-length: prevent all page breaks */
@page {
    margin: 0;
}
html, body {
    height: auto !important;
}
* {
    page-break-inside: avoid !important;
    page-break-before: avoid !important;
    page-break-after: avoid !important;
    break-inside: avoid !important;
    break-before: avoid !important;
    break-after: avoid !important;
}
#else
@page {
    size: A4;
    margin: 0;
}
#end

* {
    box-sizing: border-box;
}

body {
    font-family: 'Exo 2', sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
}

.page-container {
    width: 100%;
    padding: 100px 48px 100px 48px;
}

/* Product Info Section */
.product-section {
    display: flex;
    width: 100%;
    margin-bottom: 20px;
}

.product-info {
    flex: 1;
    padding-right: 20px;
}

.product-code-badge {
    display: inline-block;
    background-color: #f36717;
    color: white;
    font-size: 24px;
    font-weight: bold;
    padding: 8px 20px;
    border-radius: 20px;
    margin-bottom: 15px;
}

.product-name {
    font-size: 28px;
    font-weight: bold;
    text-transform: uppercase;
    color: #333;
    margin-bottom: 20px;
    line-height: 1.2;
}

.product-details-table {
    width: 100%;
    border-collapse: collapse;
}

.product-details-table td {
    padding: 8px 0;
    font-size: 14px;
    vertical-align: top;
}

.detail-label {
    color: #666;
    width: 180px;
}

.detail-value {
    font-weight: bold;
    color: #333;
}

/* Product Images */
.product-images {
    width: 280px;
    flex-shrink: 0;
}

.main-image-wrapper {
    width: 100%;
    text-align: center;
    margin-bottom: 10px;
}

.main-image {
    max-width: 100%;
    max-height: 200px;
    height: auto;
    border-radius: 4px;
}

.secondary-images {
    display: flex;
    gap: 10px;
    justify-content: center;
}

.secondary-image {
    max-width: 120px;
    max-height: 120px;
    height: auto;
    border: 1px solid #ddd;
    border-radius: 4px;
}

/* Description Section */
.description-section {
    background-color: #e9e9e9;
    border-radius: 16px;
    padding: 25px 30px;
#if(!$isFullLength)
    max-height: 540px;
    overflow: hidden;
    position: relative;
#end
}

.description-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
}

.description-content {
    font-size: 14px;
    line-height: 1.6;
    color: #444;
}

.description-content ul {
    padding-left: 20px;
    margin: 10px 0;
}

.description-content li {
    margin-bottom: 5px;
}

.description-content h2, .description-content h3 {
    font-size: 16px;
    margin: 15px 0 10px 0;
}

.description-content p {
    margin: 10px 0;
}

.description-content img {
    max-width: 100%;
    height: auto;
}

/* Full Description Button (Short Version Only) */
#if(!$isFullLength)
.full-description-wrapper {
    margin-top: 20px;
    text-align: center;
}

.full-description-btn {
    display: inline-block;
    background-color: #f36717;
    color: white;
    font-size: 14px;
    font-weight: bold;
    padding: 12px 30px;
    border-radius: 20px;
    text-decoration: none;
    text-transform: uppercase;
}
#end
</style>

</head>
<body>

<div class="page-container">
    <!-- Product Info Section -->
    <div class="product-section">
        <div class="product-info">
            <div class="product-code-badge">$product.code</div>
            <div class="product-name">$!product.name</div>

            <table class="product-details-table">
                <tr>
                    <td class="detail-label">EAN:</td>
                    <td class="detail-value">$!product.ean</td>
                </tr>
                <tr>
                    <td class="detail-label">POČET KUSŮ V BALENÍ:</td>
                    <td class="detail-value">$product.packageCount</td>
                </tr>
#if($product.guaranteeLength > 0)
                <tr>
                    <td class="detail-label">ZÁRUKA:</td>
                    <td class="detail-value">$product.guaranteeLengthFormatted</td>
                </tr>
#end
            </table>
        </div>

        <div class="product-images">
#if($product.picture1Url != "")
            <div class="main-image-wrapper">
                <img class="main-image" src="$product.picture1Url" alt="$!product.name"/>
            </div>
#end
            <div class="secondary-images">
#if($product.picture2Url != "")
                <img class="secondary-image" src="$product.picture2Url" alt="$!product.name"/>
#end
#if($product.picture3Url != "")
                <img class="secondary-image" src="$product.picture3Url" alt="$!product.name"/>
#end
            </div>
        </div>
    </div>

    <!-- Description Section -->
    <div class="description-section">
        <div class="description-title">$!product.brand $!product.name</div>
        <div class="description-content">
            $!product.description
        </div>
    </div>

#if(!$isFullLength)
    <!-- Full Description Button (Short Version Only) -->
    <div class="full-description-wrapper">
        <a class="full-description-btn" href="https://b2b.solight.cz/detailsklk.aspx?sklk_id=$!product.productId">
            KOMPLETNÍ POPIS
        </a>
    </div>
#end
</div>

</body>
</html>
